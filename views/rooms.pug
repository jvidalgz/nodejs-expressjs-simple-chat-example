extends layout
block content
    h1 Chat Rooms
    a.btn.btn-primary(href='/admin/rooms/add') Create a new chatroom
    table.table.table-striped
        thead
            tr
                th Nombre
                th ID
        tbody
            each room in rooms
                tr
                    td(style='width: 50px;'): a(href=`/admin/rooms/delete/${room.id}`)
                        span delete
                    td(style='width: 50px;'): a(href=`/admin/rooms/edit/${room.id}`)
                        span edit
                    td= room.name
                    td= room.id
